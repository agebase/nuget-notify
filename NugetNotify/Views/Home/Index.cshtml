@model HomeIndexViewModel

@{
    ViewBag.Title = "Nuget Notify";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section BodyScripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="/scripts/validation.js" type="text/javascript"></script>
}

<div class="row">
    <div class="col-xxs-12">
        <h1>Nuget Notify</h1>
        @using (Html.BeginForm("Submit", "Home"))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <div>
                    @Html.LabelFor(model => model.PackageName)
                    @Html.EditorFor(model => model.PackageName)
                    @Html.ValidationMessageFor(model => model.PackageName)
                </div>
                <div>
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div>
                    @Html.LabelFor(model => model.Twitter)
                    @Html.EditorFor(model => model.Twitter)
                    @Html.ValidationMessageFor(model => model.Twitter)
                </div>
                <div>
                    @Html.LabelFor(model => model.Telephone)
                    @Html.EditorFor(model => model.Telephone)
                    @Html.ValidationMessageFor(model => model.Telephone)
                </div>
                <div class="form-actions">
                    <input type="submit" value="Create Notification" />
                </div>
            </fieldset>
        }
    </div>
</div>